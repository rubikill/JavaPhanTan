        <put-attribute name="menu_bar" value="/WEB-INF/layout/nav.jsp" />        
        <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" />
    </definition>
    
    <!-- Page with slider -->
    <definition name="home" extends="templatewithslider">
        <put-attribute name="content" value="/WEB-INF/page/home.jsp"/>
        <put-attribute name="slider" value="/WEB-INF/layout/slider.jsp" />
    </definition>
    <definition name="compair" extends="templatewithslider">
        <put-attribute name="content" value="/WEB-INF/page/compair.jsp"/>
        <put-attribute name="slider" value="/WEB-INF/layout/slider.jsp" />
