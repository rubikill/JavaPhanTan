        <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" />
    </definition>
    
    <!-- Template only nav bar -->
    <definition name="templateiustonlynavbar" template="/WEB-INF/template/templateiustonlynavbar.jsp">
        <put-attribute name="style" value="/WEB-INF/layout/style.jsp" />
        <put-attribute name="script" value="/WEB-INF/layout/script.jsp" />        
