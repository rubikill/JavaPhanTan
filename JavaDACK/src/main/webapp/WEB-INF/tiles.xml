<tiles-definitions>
    <!-- Template with slider -->
    <definition name="templatewithslider" template="/WEB-INF/template/template.jsp">
        <put-attribute name="style" value="/WEB-INF/layout/style.jsp" />
        <put-attribute name="script" value="/WEB-INF/layout/script.jsp" />        
        <put-attribute name="header" value="/WEB-INF/layout/header.jsp" />
        <put-attribute name="menu_bar" value="/WEB-INF/layout/nav.jsp" />
        <put-attribute name="sidebar" value="/WEB-INF/layout/sidebar.jsp" />        
        <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" />
    </definition>
    
    <!-- Template no slider -->
    <definition name="templatenoslider" template="/WEB-INF/template/templatewithnoslider.jsp">
        <put-attribute name="style" value="/WEB-INF/layout/style.jsp" />
        <put-attribute name="script" value="/WEB-INF/layout/script.jsp" />        
        <put-attribute name="header" value="/WEB-INF/layout/header.jsp" />
